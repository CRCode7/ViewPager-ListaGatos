<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvGatoProfile"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/foto_perfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/onegatosomali"
            android:layout_marginLeft="120dp"
            app:civ_border_color="#f3ff93"
            app:civ_border_width="10dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            />

        <TextView
            android:id="@+id/Nombregato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gato Somali"
            android:layout_marginLeft="150dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img1Gato"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/onegatosomali"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/nLikes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <ImageView
                    android:id="@+id/imgLiked1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_liked"

                    />

                <ImageView
                    android:id="@+id/img2Gato"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/gatosomali2"
                    />
                <TextView
                    android:id="@+id/nLikes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="-90dp"
                    />
                <ImageView
                    android:id="@+id/imgLiked2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_liked"
                    android:layout_marginTop="120dp"
                    />
                <ImageView
                    android:id="@+id/img3Gato"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/gatosomali3"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="-50dp"
                    />
                <TextView
                    android:id="@+id/nLikes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="225dp"
                    android:layout_marginLeft="-90dp"
                    />
                <ImageView
                    android:id="@+id/imgLiked3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_liked"
                    android:layout_marginTop="230dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>






</android.support.v7.widget.CardView>